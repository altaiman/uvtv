mixin lkCoursePage(data)
  +b.course
    +e.side
      +e.title
        +b.SPAN.subcaption Курс
        +b.SPAN.caption._size-s= data.title
        +progressPercent(data.progress.percent)
      +e.modules(data-simplebar)
        +module(data.modules)
              
    +e.main
      +b.SPAN.caption Поэтапный разбор франшизы
      +e.player
      +e.content
