include ../item/index.pug
include videos/videos.pug
include articles/articles.pug
include courses/courses.pug
include webinars/webinars.pug
include team/team.pug

mixin slider(data)
  +b.slider(data-slider=data.slider class=((data.style) ? data.style : ''))
    - if (data.title)
      +e.header
        +b.H3.caption= data.title
        +e.controls(data-slider-controls)
          +b.BUTTON.arrow._prev(data-slider-controls-prev)
            +svg({
              name: 'ico-arrow'
            })
          +b.BUTTON.arrow._next(data-slider-controls-next)
            +svg({
              name: 'ico-arrow'
            })
    - else
      +e.controls(data-slider-controls)
        +b.BUTTON.arrow._prev(data-slider-controls-prev)
          +svg({
            name: 'ico-arrow'
          })
        +b.BUTTON.arrow._next(data-slider-controls-next)
          +svg({
            name: 'ico-arrow'
          })
    +e.UL.slides(data-slider-slides)
      block
    - if (data.progress)
      +e.progress
        span(data-slider-progress)
