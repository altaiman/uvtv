//- includes
include components/head/index.pug
include components/svg/index.pug

include components/header/index.pug
include components/common/index.pug
include components/side/index.pug
include components/slider/index.pug
include components/item/index.pug
include components/footer/index.pug
include components/footer/scripts.pug

//- end includes

//- variables page 
- 
	pageSettings = {
		title: 'Бондарев Андрей Евгеньевич',
		side: true
	}
	
//- end variables

doctype html
html(lang=global.lang)
	+head(pageSettings)
	+b.BODY.page(class=pageSettings.side ? '_side' : '')
		+header({
			title: pageSettings.title 
		})
		
		if (pageSettings.side)
			+e.ASIDE.side
				+side
		
		+e.MAIN.content
			+b.container
				+speaker_page({
					name: 'Бондарев <br>Андрей Евгеньевич',
					img: 'speaker.jpg',
					label: 'Сексолог',
					text: 
						`
							Давно выяснено, что при оценке дизайна и композиции читаемый текст мешает 
							сосредоточиться. Lorem Ipsum используют потому, что тот обеспечивает более или
						`,
					courses: ['Вконтакте: Реклама', 'Яндекс дзен', 'Facebook: Как привлечь всех пользователей', 'Яндекс дзен']
				})
				
				+sliderVideos({
					title: 'Полезные видео',
					slider: 'items'
				})
				
				+sliderArticles({
					title: 'Полезные статьи',
					slider: 'items'
				})
				
				+sliderCourses({
					title: 'Курсы автора',
					slider: 'items'
				})
				
				+sliderWebinars({
					title: 'Вебинары автора',
					slider: 'items'
				})

		+footer
		
		+scripts
